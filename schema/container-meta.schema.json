{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://streamdeploy.io/schemas/container-meta.schema.json",
  "title": "ContainerMeta",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "slug",
    "name",
    "tagline",
    "primaryHw",
    "whatItDoes",
    "whyItSavesTime",
    "architectures",
    "tags"
  ],
  "properties": {
    "slug": { "type": "string", "pattern": "^[a-z0-9-]+$", "minLength": 3, "maxLength": 64 },
    "name": { "type": "string", "minLength": 3, "maxLength": 128 },
    "tagline": { "type": "string", "minLength": 3, "maxLength": 200 },
    "primaryHw": { "type": "string", "minLength": 3, "maxLength": 200 },
    "whatItDoes": { "type": "string", "minLength": 3, "maxLength": 2000 },
    "whyItSavesTime": { "type": "string", "minLength": 3, "maxLength": 2000 },
    "architectures": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": { "enum": ["arm64", "amd64"] }
    },
    "tags": {
      "type": "array",
      "minItems": 1,
      "maxItems": 16,
      "items": { "type": "string", "minLength": 2, "maxLength": 64 }
    },

    /* Optional sources (usually not stored in meta.json, but allowed) */
    "dockerfile": { "type": "string" },
    "entrypoint": { "type": "string" },

    /* --- StreamDeploy extras (may be present in meta.json) --- */
    "ghcr_image": { "type": "string" },
    "deployment_ready": { "type": "boolean" },
    "quick_deploy_enabled": { "type": "boolean" },
    "fork_customize_enabled": { "type": "boolean" },
    "pi_optimized": { "type": "boolean" },
    "default_env": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "health_check_command": { "type": "string" },
    "resource_limits": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "cpu": { "type": "string" },
        "memory": { "type": "string" }
      }
    }
  }
}
